{
  "name": "find-workspaces",
  "version": "0.0.4",
  "keywords": [
    "workspaces",
    "packages",
    "monorepo",
    "yarn",
    "npm",
    "pnpm",
    "lerna",
    "bolt"
  ],
  "repository": "joshuajaco/find-workspaces",
  "license": "MIT",
  "exports": "./dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "coverage": "mkdir -p coverage && touch coverage/lcov.info && nyc report --reporter=text-lcov > coverage/lcov.info",
    "format": "prettier -w --ignore-path .gitignore .",
    "lint": "prettier -c --ignore-path .gitignore .",
    "prepublishOnly": "npm run build",
    "test": "nyc ts-node tests"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "type-fest": "^3.2.0",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
